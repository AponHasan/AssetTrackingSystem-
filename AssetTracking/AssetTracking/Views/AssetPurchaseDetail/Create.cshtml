@model AssetTracking.Models.Models.AssetPurchaseDetail

@{
    ViewBag.Title = "Create Asset Purchase Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN FORM DESIGN -->
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Create Asset Purchase Detail
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Html.BeginForm("Create", "AssetPurchaseDetail", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Asset Header</label>
                    <div class="col-md-4">
                        @Html.ValidationSummary(true)
                        <div class="input-group">
                            <span class="input-group-addon input-circle-left">
                                <i class="fa fa-building-o" aria-hidden="true"></i>
                            </span>
                            @Html.DropDownList("AssetPurchaseHeaderID", ViewBag.AssetPurchaseHeaderID as SelectList, "Select Asset Purchase Header", htmlAttributes: new { @class = "form-control input-circle-right" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Product</label>
                    <div class="col-md-4">
                        @Html.ValidationSummary(true)
                        <div class="input-group">
                            <span class="input-group-addon input-circle-left">
                                <i class="fa fa-building-o" aria-hidden="true"></i>
                            </span>
                            @Html.DropDownList("ProductID", ViewBag.ProductID as SelectList, "Select Product ", htmlAttributes: new { @class = "form-control input-circle-right" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Quantity</label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-addon input-circle-left">
                                <i class="fa fa-font" aria-hidden="true"></i>
                            </span>
                            @Html.TextBoxFor(model => model.Quantity, new {@class = "form-control input-circle-right", @placeholder = "Enter Quantity" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Quantity, String.Empty, new {@class = "font-red-thunderbird"})
                    </div>
                </div>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">UnitPrice</label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-addon input-circle-left">
                                <i class="fa fa-font" aria-hidden="true"></i>
                            </span>
                            @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control input-circle-right", @placeholder = "Enter UnitPrice" })
                        </div>
                        @Html.ValidationMessageFor(model => model.UnitPrice, String.Empty, new { @class = "font-red-thunderbird" })
                    </div>
                </div>
            </div>
            
           
            @*<div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">general Category</label>
                    <div class="col-md-4">
                        @Html.ValidationSummary(true)
                        <div class="input-group">
                            <span class="input-group-addon input-circle-left">
                                <i class="fa fa-building-o" aria-hidden="true"></i>
                            </span>
                            @Html.DropDownList("WarrantyPeriodUnitID", ViewBag.WarrantyPeriodUnitID as SelectList, "Select Warranty Period Unit", htmlAttributes: new { @class = "form-control input-circle-right" })
                        </div>
                    </div>
                </div>
            </div>*@
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-circle green">Create</button>
                        @Html.ActionLink("Cancel", "Index", "AssetPurchaseDetail", null, new { @type = "button", @class = "btn btn-circle grey-salsa btn-outline" })
                    </div>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>
</div>
