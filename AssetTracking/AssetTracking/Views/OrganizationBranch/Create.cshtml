@using System.Data.Entity.Core.Objects
@model AssetTracking.Models.Models.OrganizationBranch

@{
    ViewBag.Title = "Organization Branch Create";
}
  <!-- BEGIN FORM DESIGN -->
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Create Organization Branch
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
@using (Html.BeginForm("Create", "OrganizationBranch", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label">Organization Name</label>
                <div class="col-md-4">
                    @Html.ValidationSummary(true)
                    <div class="input-group">
                        <span class="input-group-addon input-circle-left">
                                <i class="fa fa-building-o" aria-hidden="true"></i>
                            </span>
                        @Html.DropDownListFor(model => model.OrganizationID, ViewBag.OrganizationID as SelectList, "Select Organization", new {@class = "form-control input-circle-right"})
                    </div>
                    @Html.ValidationMessageFor(model => model.OrganizationID)
                </div>
            </div>
        </div>
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label">Organization Branch Name</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon input-circle-left">
                                <i class="fa fa-building" aria-hidden="true"></i>
                            </span>
                        @Html.TextBoxFor(model => model.OrganizationBranchName, new {@placeholder = "Enter Organization Branch Name", @class = " form-control input-circle-right"})
                    </div>
                    @Html.ValidationMessageFor(model => model.OrganizationBranchName)
                </div>
            </div>
        </div>
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label">Organization Branch Short Name</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon input-circle-left">
                                <i class="fa fa-font" aria-hidden="true"></i>
                            </span>
                        @Html.TextBoxFor(model => model.OrganizatioBranchShortName, new {@class = "form-control input-circle-right", @placeholder = "Enter Organization Branch Short Name"})
                    </div>
                    @Html.ValidationMessageFor(model => model.OrganizatioBranchShortName)
                </div>
            </div>
        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-circle green">Create</button>
                    @Html.ActionLink("Cancel", "Index", "OrganizationBranch", new { @type = "button", @class = "btn btn-circle grey-salsa btn-outline" })
                </div>
            </div>
        </div>
}
        <!-- END FORM-->
    </div>
</div>

